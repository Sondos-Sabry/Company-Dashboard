@model IEnumerable< UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="mt-4">  All Users</h1>
<br />
<br />


@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="alert alert-primary">
        @TempData["Message"]
    </div>
}
<br />
@if (Model.Count() > 0)
{
    <div class=" row justify-content-center align-items-center mt-2">

        <form asp-action="Index" class="row col-8 offset-1">
            <div class="col-8">
                <input type="text" class="form-control" id="email" name="email" placeholder="Search By Email" />
            </div>
            <div class="col-4">
                <input type="submit" value="Search" class="btn btn-success " />
            </div>

        </form>
    </div>
    <table class="table table-hover mt-3" style="margin-left: -100px;">
        <thead>
            <tr>
@*                <th scope="col">@Html.DisplayNameFor(U=>U.Id)</th>*@
                <th scope="col">@Html.DisplayNameFor(U=>U.FName)</th>
                <th scope="col">@Html.DisplayNameFor(U=>U.LName)</th>
                <th scope="col">@Html.DisplayNameFor(U=>U.Email)</th>
                <th scope="col">@Html.DisplayNameFor(U=>U.PhoneNumber)</th>
                <th scope="col">@Html.DisplayNameFor(U=>U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var User in Model)  
            {
                <tr> 
                    <td>@User.FName</td>
                    <td>@User.LName</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join("," , User.Roles)</td>
                    <partial name="_ButtonsPartial" model="User.Id" />
                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h2>There Is No Users :(</h2>
    </div>
}



