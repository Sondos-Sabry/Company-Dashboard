@model IEnumerable<DepartmentViewModel>
@{
    
    ViewData["Title"] = "Index";//dynamic object 
    Layout = "_Layout";
}

    <h1>All Departments</h1>
    <br />
    <br />

    <a asp-controller="Department" asp-action="Create" class="btn" style="background-color: #0c0b0c3b;"> Add New Department </a>
    
    <br />
    <br />

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="alert alert-primary">
        @TempData["Message"]
    </div>
}
    <br />
@if (Model.Count() > 0)
{

    <table class="table table-hover " >
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(d=>d.Code)</th>
            <th scope="col">@Html.DisplayNameFor(d=>d.Name)</th>
            <th scope="col">@Html.DisplayNameFor(d=>d.DateOfCreation)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
            
        @foreach(var department in Model)
        {
            <tr>
                <td>@department.Code</td>
                <td>@department.Name</td>
                <td>@department.DateOfCreation</td>
                <partial name="_ButtonsPartial"  model="@department.Id.ToString()"/>
           </tr>
}
        
    </tbody>
</table>

}
else{
    <div class="mt-4 alert alert-warning">
        <h2>There Is No Department :(</h2>
    </div>
}