@model EmployeeViewModel
@inject IUnitOfWork unitOfWork
@{ 
    //var departments = new SelectList(ViewData["Departments"] as IEnumerable<Department>, nameof(Department.Id), nameof(Department.Name));
    var departments = new SelectList( await unitOfWork.DepartmentRepository.GetAll(), nameof(Department.Id), nameof(Department.Name));
}
<div class="field-wrapper mb-3 form-group">
    <label class="form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" style=" box-shadow: none;" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="field-wrapper mb-3 form-group">
    <label asp-for="Age" class="form-label"></label>
    <input asp-for="Age" class="form-control" style=" box-shadow: none;" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="field-wrapper mb-3 form-group">
    <label asp-for="Address" class="form-label"></label>
    <input asp-for="Address" class="form-control" style=" box-shadow: none;" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="field-wrapper mb-3 form-group">
    <label asp-for="Salary" class="form-label"></label>
    <input asp-for="Salary" class="form-control" style=" box-shadow: none;" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="field-wrapper mb-3 form-group">
    <label asp-for="Email" class="form-label"></label>
    <input asp-for="Email" class="form-control" style=" box-shadow: none;" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="field-wrapper mb-3 form-check">
    <input asp-for="IsActive" class="form-check-input" style=" box-shadow: none;" />
    <label asp-for="IsActive" for="IsActive" class="form-label"></label>
</div>
<div class="field-wrapper mb-3 form-group">
    <label asp-for="PhoneNumber" class="form-label"></label>
    <input asp-for="PhoneNumber" class="form-control" style=" box-shadow: none;" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div class="field-wrapper mb-3 form-group">
    <label asp-for="HiringDate" class="form-label"></label>
    <input asp-for="HiringDate" class="form-control" style=" box-shadow: none;" />
</div>

<div class="field-wrapper mb-3 form-group">
    <label asp-for="Department"  class="form-label"></label>
    <select class="field-wrapper mb-3 form-control" asp-for="DepartmentId" asp-items="@departments">
        <option value="@null">-- Select Department --</option>
    </select>
</div>

<div class="field-wrapper mb-3 form-group">
    <label class="col-form-label" asp-for="Image"></label>
    <input type="file" class="form-control-file" asp-for="Image" style=" box-shadow: none;" />
</div>

